@page "/EntradasHuacales/Index"
@using Raydelis_HilarioAP1_P1.Models

<div class="container">
    <div class="card-container">
        <div class="card-header bg-light">
            <h5 class="card-title">Entradas de huacales</h5>
        </div>
        <div class="card-body bg-light">
            <div class="d-flex justify-content-between bg-light gap-2">
                <InputText class="form-control" @bind-Value="ValorFiltro" placeholder="Buscar..."></InputText>
                @* boton buscar *@
                <button class="btn btn-outline-primary bi bi-search me-2" @onclick="Buscar"></button>
                @* boton create *@
                <a href="/EntradasHuacales/Create" class="btn btn-primary">
                    <span class="bi bi-plus-square mt-3"></span>
                </a>
            </div>
            <table class="table-hoover">
                <thead>
                    <tr>
                        <td>Entrada Id</td>
                        <td>Fecha</td>
                        <td>Nombre del cliente</td>
                        <td>Cantidad</td>
                        <td>Precio</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var entrada in ListaEntradas)
                    {
                        <tr>
                            <td>@entrada.IdEntrada</td>
                            <td>@entrada.Fecha</td>
                            <td>@entrada.NombreCliente</td>
                            <td>@entrada.Cantidad</td>
                            <td>@entrada.Precio</td>
                            <td>
                                @* boton edit *@
                                <a class="btn btn-sm btn-outline-primary" href="/EntradasHuacales/Edit">
                                    <span class="bi bi-pencil-square"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-light">
            <label>Cantidad: @ListaEntradas.Count</label>
        </div>
    </div>
</div>

@code {
    public List<EntradasHuacales> ListaEntradas = new List<EntradasHuacales>();
    public string ValorFiltro = string.Empty;

    private async void Buscar()
    {
        
    }
}
