@page "/EntradasHuacales/Create"
@using Raydelis_HilarioAP1_P1.Extensors
@using Raydelis_HilarioAP1_P1.Models
@using Raydelis_HilarioAP1_P1.Services

@inject ToastService toastService
@inject NavigationManager navigationManager
@inject EntradasHuacalesService entradasHuacalesService

<PageTitle>Crear entrada</PageTitle>
<EditForm Model="@entradaHuacal" OnValidSubmit="Guardar">
    <DataAnnotationsValidator/>
    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header bg-light">
                <h5 class="card-title">Crear entrada de huacal</h5>
            </div>
            <div class="card-body bg-light">
                <div class="justify-content-between">
                    <label><strong>Fecha de entrada:</strong></label>
                    <div class="d-flex justify-content-start gap-2">
                        <InputDate Type="InputDateType.DateTimeLocal" class="form-control" @bind-Value="@entradaHuacal.Fecha" placeholder="Ingrese la fecha de la entrada"></InputDate>
                        <ValidationMessage For="@(() => entradaHuacal.Fecha)" />
                    </div>
                    <label><strong>Nombre del cliente:</strong></label>
                    <div class="d-flex justify-content-start gap-2">
                        <InputText class="form-control" @bind-Value="@entradaHuacal.NombreCliente" placeholder="Ingrese el nombre del cliente..."></InputText>
                        <ValidationMessage For="@(() => entradaHuacal.NombreCliente)" />
                    </div>
                    <label><strong>Cantidad:</strong></label>
                    <div class="d-flex justify-content-start gap-2">
                        <InputNumber class="form-control" @bind-Value="@entradaHuacal.Cantidad" placeholder="Ingrese la cantidad..."></InputNumber>
                        <ValidationMessage For="@(() => entradaHuacal.Cantidad)" />
                    </div>
                    <label><strong>Precio:</strong></label>
                    <div class="d-flex justify-content-start gap-2">
                        <InputNumber class="form-control" @bind-Value="@entradaHuacal.Precio" placeholder="Ingrese la el precio del huacal..."></InputNumber>
                        <ValidationMessage For="@(() => entradaHuacal.Precio)" />
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-center gap-2">
                <a href="/EntradasHuacales/Index" class="btn btn-secondary ">
                    <span class="bi bi-arrow-left">Volver</span>
                </a>
                <button class="btn btn-primary bi bi-save">Crear</button>
            </div>
        </div>
    </div>
</EditForm>

@code {
    EntradasHuacales entradaHuacal = new EntradasHuacales();

    public async Task Guardar()
    {
        var guardado = await entradasHuacalesService.Guardar(entradaHuacal);
        if (guardado)
        {
            toastService.ShowSuccess("La entrada ha sido guardada con exito!");
            navigationManager.NavigateTo("/EntradasHuacales/Index");
        }
        else
        {
            toastService.ShowError("Ha ocurrido un error al intentar guardar la entrada.");
        }
    }

}
